<!DOCTYPE html>
<html lang="en">
    <style>
        .error{
            color: #f20;
            font-style: italic;
        }
    </style>
<%- include('../partials/adminhead'); -%>
    <body>
        <section id="container">
            <%- include('../partials/adminheader'); -%>
                <%- include('../partials/adminleft'); -%>
                    <!--main content start-->
                    <section id="main-content">
                        <section class="wrapper">
                            <div class="clearfix">
                                <div class="table-agile-info">
                                    <div class="panel panel-default">
                                        <div class="panel-heading">
                                            CẬP NHẬT NHÂN VIÊN
                                        </div>
                                        <form method="POST" action="/admin/nhanvien/updatenhanvien" id="formAddProduct">
                                            <label>Mã nhân viên</label>
                                            <input type="text" class="form-control" name="manv"
                                                placeholder="Tên nhân viên" value="<%= nhanvien.manv%>" readonly><br>
                                            <label>Trạng thái</label> <br />
                                            <% if(nhanvien.trangthai){ %>
                                            <input name="trangthai" type="radio" value="1" checked="checked">
                                              Hoạt động
                                            <input name="trangthai" type="radio" value="0"> Không hoạt động <br />
                                            <br/>
                                            <% } else { %>
                                            <input name="trangthai" type="radio" value="1">
                                              Hoạt động
                                            <input name="trangthai" type="radio" value="0" checked="checked"> Không hoạt động <br />
                                            <br />
                                            <% } %>
                                            <input type="submit" name="capnhatnhanvien" value="Cập nhật nhân viên"
                                                class="btn btn-primary"><br/>
                                            <br/>
                                            <a class="btn btn-info" href="admin/nhanvien">Quay lại?</a>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </section>
                        <%- include('../partials/adminfooter'); -%>
                    </section>
                    <!--main content end-->
        </section>
        <%- include('../partials/adminscript_bottom'); -%>
    </body>
</html>