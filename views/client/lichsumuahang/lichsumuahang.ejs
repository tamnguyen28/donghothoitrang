<!DOCTYPE html>
<html lang="en">
<%- include ('../partials/head'); -%>

    <body>
        <div class="app">
            <%- include ('../partials/header'); -%>
            
            <form action="/" method="post">
                <div class="row" class="col-lg-6 col-md-6 col-sm-6 col-xs-12 mt-40">
                    <div class="col-lg-12">
                        <div class="login-title text-center mb-30 mt-40">
                            <img src="https://d1nhio0ox7pgb.cloudfront.net/_img/g_collection_png/standard/512x512/shopping_cart_full.png" style="width: 200px; height: 200px;" />
                            <h2>Lịch sử mua hàng</h2>
                        </div>
                    </div>
                </div>
                <div class="cart-main-area mb-70">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12">
                                <form action="#" method="post">
                                    <div class="table-content table-responsive">
                                        <input type="date" id="start" name="trip-start"  style="float: right;">
                                        <table>
                                            <thead>
                                                <tr>
                                                    <th class="product-stt">STT</th>
                                                    <th class="product-thumbnail">Mã hóa đơn</th>
                                                    <th class="product-name">Mã sản phẩm</th>
                                                    <th class="product-name">Tên sản phẩm</th>
                                                    <th class="product-name">Họ tên khách hàng</th>
                                                    <th class="product-name">Tổng hóa đơn</th>
                                                    <th class="product-name">Phương thức thanh toán</th>
                                                    <th class="product-price">Trạng thái</th>
                                                    <th class="product-quantity">Thời gian đặt</th>
                                                </tr>
                                                <% let  i = 1 %>
                                                <% donhang.forEach(function(sp){ %>
                                                    <tr>
                                                        <td><%= i++ %></td>
                                                        <td><%= sp.mahd %></td>
                                                        <td><%= sp.masp %></td>
                                                        <td><%= sp.tensp %></td>
                                                        <td><%= sp.tennguoinhan %></td>
                                                        <td><%= sp.tonghoadon %></td>
                                                        <td><%= (sp.phuongthucthanhtoan == 1 || sp.phuongthucthanhtoan == 2) ? 'Thanh toán online': 'Thanh toán cod'%></td>
                                                        <td><%= sp.trangthai == 1 ? 'Đã thanh toán' : 'Chưa thanh toán' %></td>
                                                        <td><%= sp.tgtao %></td>
                                                    </tr>
                                                <% }) %>
                                            </thead>
                                            <tbody>
                                            </tbody>
                                        </table>
                                    </div>
                                </form>
                                
                            </div>
                        </div>
                        </div>
                    </div>
                </div>
            </form>

            <%- include ('../partials/footer'); -%>
        </div>
    </body>
</html>