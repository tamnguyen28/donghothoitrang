<!DOCTYPE html>
<html lang="en">
<%- include ('../partials/head'); -%>
    <body>
        <div class="app">
            <%- include ('../partials/header'); -%>
                <!-- entry-header-area-start -->
                <div class="entry-header-area">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12">
                                <br />
                                <div class="entry-header-title" align="center">
                                    <h2>Giỏ hàng</h2>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- entry-header-area-end -->
                <!-- cart-main-area-start -->
                <div class="cart-main-area mb-70">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12">
                                <form action="#" method="post">
                                    <div class="table-content table-responsive">
                                        <table>
                                            <thead>
                                                <tr>
                                                    <th class="product-stt">STT</th>
                                                    <th class="product-thumbnail">Hình ảnh</th>
                                                    <th class="product-name">Thương hiệu</th>
                                                    <th class="product-name">Sản phẩm</th>
                                                    <th class="product-price">Giá tiền</th>
                                                    <th class="product-quantity">Số lượng</th>
                                                    <th class="product-subtotal">Tổng tiền</th>
                                                    <th class="product-remove">Quản lý</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                
                                                <% for (let i = 0; i < giohangs.length; i++) {%>
                                                    <tr>
                                                        <td></td>
                                                        <td class="product-thumbnail"><a href="#"><img src="client/img/product/<%= giohangs[i].hinhanh%>" alt=" " class="img-responsive"/></a></td>
                                                        <td class="product-name"><a href="#"><%= giohangs[i].tenthuonghieu %></a></td>
                                                        <td class="product-name"><a href="#"><%= giohangs[i].tensp%></a></td>
                                                        <td id="price" class="product-price"><span id="price<%= giohangs[i].masp %>" class="amount"><%= giohangs[i].giatien%></span></td>
                                                        <td class="product-quantity">
                                                            <input id="<%= giohangs[i].masp%>" min="1" max="100" type="number" onChange="changeCount(this)" value="<%= giohangs[i].soluong%>"/>
                                                        </td>
                                                        <td id="total<%= giohangs[i].masp %>" class="product-subtotal"><%= giohangs[i].tongtien %></td>
                                                        <td class="product-remove">
                                                            <a href="/giohang/xoagiohang?id=<%= giohangs[i].masp%>">Xóa</a>
                                                        </td>
                                                    </tr>
                                                <% }%>
                                             
                                            <tr>
                                                <td colspan="7" >Tổng tiền: <span id="totalAmout"><% let totoal = 0; for(let i = 0; i < giohangs.length; i++){totoal += giohangs[i].tongtien;} %> <%= totoal %></span></td>
                                            </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </form>
                            </div>
                        </div>
                            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                                <div class="wc-proceed-to-checkout">
                                        <a href="/donhang">Thanh toán</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- cart-main-area-end -->
            <%- include ('../partials/footer'); -%>
        </div>
    </body>
<script>
    function changeCount(input){
        let soluong = input.value;
        let currentPrice = parseInt($(`#price${input.id}`).html());
        

        $.ajax({
            method:'GET',
            url: '/giohang/tinhsoluongvatongtien',
            data:{
                idsp: input.id,
                sl: input.value
            },
            success: function(data){
                $(`#total${input.id}`).html(data.total);
                $(`#totalAmout`).html(data.totalAmount)
            }, 
            error: function(){

            }
        })
    }
</script>
</html>