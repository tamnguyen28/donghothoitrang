                                                <tfoot>
                                                    <tr class="cart-subtotal">
                                                        <th id="tonggiohang">Tổng giỏ hàng</th>
                                                        <td><span class="amount"><%= totalAmount %></span></td>
                                                    </tr>
                                                    <tr class="shipping">
                                                        <th>Vận chuyển</th>
                                                        <td>
                                                            <ul>
                                                                <li>
                                                                    <label>Miễn phí vận chuyển</label>
                                                                </li>
                                                            </ul>
                                                        </td>
                                                    </tr>
