                                                    <input type="hidden" name="thanhtoan_soluong[]" value="<?php echo $row_thanhtoan['quantity']; ?>">
                                                <input type="submit" name="thanhtoan" value="Đặt hàng và thanh toán">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- checkout-area-end -->
            <%- include ('../partials/footer'); -%>
        </div>
